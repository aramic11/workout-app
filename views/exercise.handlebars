<!-- Exercise -->
<section class="exercise">
    <button class="createNewWorkoutBtn" type="button">Create New Program</button>
    <button class="selectProgramBtn">Select a Program</button>
    <section class="selectProgramContainer">
        <select class="programOptionSelectEl">
            <!-- List Programs here-->
        </select>
        <button class="selectBtn">Select</button>
    </section>
    <br>
    <form class='sessionModel' action="javascript:saveToDB();">

        <div>
            <label for="date">Session Date:</label>
            <input type="date" class='date' name="workoutDate" min="2023-01-01" required>
        </div>
        <section class="exerciseLog">
            <!-- exercise tables will go here -->
        </section>
        <section class="openExerciseLog">
            <div>
                <h3 class="program">Sample Session</h3>
            </div><br>
            <h4 class="exerciseName">Bench Press</h4>
            <table class="trainingTable">
                <tr>
                    <th>Set</th>
                    <th>Reps</th>
                    <th>Weight</th>
                    <th>Type</th>
                    <th>Comments</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>8</td>
                    <td>225</td>
                    <td>Barbell</td>
                    <td>Felt good, going to bump up weight</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>6</td>
                    <td>250</td>
                    <td>Barbell</td>
                    <td>Getting harder to lift</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>4</td>
                    <td>280</td>
                    <td>Barbell</td>
                    <td>Finished Strong!</td>
                </tr>
            </table><br>
        </section>
        <br>
        <button type="submit" class="saveSesh save_db">Save Session to Database</button>
    </form>
</section>


{{#if logged_in}}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="./js/helper.js"></script>
<script src="./js/exercise.js"></script>
{{/if}}